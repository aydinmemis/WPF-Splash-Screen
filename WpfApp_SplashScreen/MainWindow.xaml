<Window x:Class="WpfApp_SplashScreen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_SplashScreen"
        mc:Ignorable="d"
        ResizeMode="NoResize" WindowStyle="None" Background="WhiteSmoke" WindowStartupLocation="CenterScreen"
        Title="Splash Screen" Height="146" Width="450">
  
    <StackPanel VerticalAlignment="Center">
        <Image Source="/image/a_m_logo.png" Height="90" Width="185">
            
        </Image>
        <TextBlock FontSize="15" Foreground="Black" TextAlignment="Center">@aydnmms </TextBlock>
        <TextBlock Name="txtLoading" FontSize="15" Foreground="Gray" TextAlignment="Left">Loading..</TextBlock>
        <Canvas>
        <Rectangle Name="progressBar" 
           
           Fill="DarkMagenta" HorizontalAlignment="Left"
		   Height="3" Margin="0,0,0,0"
		   VerticalAlignment="Top" Width="5"
		   RadiusY="0,1" RadiusX="0,1"/>
        </Canvas>
    </StackPanel>
</Window>
